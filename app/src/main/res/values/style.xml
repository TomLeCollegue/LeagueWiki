<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="TextAppearance.LeagueWiki.AppCompat.Display1" parent="TextAppearance.AppCompat.Display1">
        <item name="fontFamily">@font/friz_quadrata_regular</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">?colorOnSurface</item>
    </style>

    <style name="TextAppearance.LeagueWiki.AppCompat.Caption" parent="TextAppearance.AppCompat.Caption">
        <item name="fontFamily">@font/friz_quadrata_std_medium</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextAppearance.LeagueWiki.AppCompat.Toolbar" parent="TextAppearance.AppCompat.Display1">
        <item name="fontFamily">@font/friz_quadrata_regular</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="MyToolbarStyle" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="fontFamily">@font/friz_quadrata_regular</item>
        <item name="android:textColorSecondary">@color/white</item>
    </style>

    <style name="ShapeAppearance.LeagueWiki.TopRoundedCardView" parent="">
        <item name="cornerSize">0dp</item>
        <item name="cornerFamilyTopLeft">rounded</item>
        <item name="cornerFamilyTopRight">rounded</item>
        <item name="cornerSizeTopLeft">20dp</item>
        <item name="cornerSizeTopRight">20dp</item>
    </style>

    <style name="ThemeOverlay.LeagueWiki.BottomSheetDialog" parent="@style/ThemeOverlay.MaterialComponents.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/Widget.LeagueWiki.BottomSheetDialog</item>
    </style>

    <style name="Widget.LeagueWiki.BottomSheetDialog" parent="Widget.MaterialComponents.BottomSheet">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearance.LeagueWiki.TopRoundedCardView</item>
    </style>
</resources>